/* blatantly stolen from the linux.conf.au 2003 website style sheet       */
/* linux.conf.au 2004 is coming soon! be there! http://conf.linux.org.au/ */

BODY {
	BACKGROUND-COLOR: white;
	COLOR: black;
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	FONT-STYLE: normal;
	FONT-VARIANT: normal;
	FONT-WEIGHT: normal;
	FONT-SIZE: medium;
	BACKGROUND-IMAGE: url("swsusp-logo.jpg");
	BACKGROUND-REPEAT: repeat-x;
	BACKGROUND-ATTACHMENT: fixed;
}

P {
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	FONT-SIZE: medium;
	COLOR:  black;
	TEXT-ALIGN: justify;
	BACKGROUND-COLOR: transparent;
}

P.sideheader {
	FONT-FAMILY: helvetica, arial, sans-serif;
	/* FONT-FAMILY: serif; */
	FONT-WEIGHT: bolder;
	FONT-SIZE: large;
	BACKGROUND-COLOR: #222266;
	COLOR:  #ffff00;
	TEXT-SHADOW: 0.2em 0.2em;
	TEXT-ALIGN: center;
	PADDING-TOP: 0.4em;
	PADDING-BOTTOM: 0.4em;
	MARGIN-TOP: 0;
}


H1 {
	TEXT-ALIGN: center;
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	FONT-SIZE: x-large;
	BACKGROUND-COLOR: #222266;
	COLOR: #FFFFBB;
	TEXT-SHADOW: 0.2em 0.2em;
	PADDING-TOP: 0.4em;
	PADDING-BOTTOM: 0.4em;
	MARGIN-TOP: 0;
}

@print {
	H1 {
	COLOR: black;
	BACKGROUND-COLOR: white;
	}
}

H2	{
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	FONT-SIZE: large;
	COLOR: #222266;
}

H3	{
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	FONT-SIZE: medium;
	COLOR: #222277;
}

BLOCKQUOTE {
	BACKGROUND-COLOR: #DDDDDD;
	FONT-FAMILY: courier, courier new, monospace;
	COLOR: #000000;
}

A:link {
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	COLOR: #440044;
	BACKGROUND-COLOR: transparent;
	TEXT-DECORATION: underline
}

A:visited {
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	COLOR: #505000;
	BACKGROUND-COLOR: transparent;
	TEXT-DECORATION: underline
}

A:hover {
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	COLOR: black;
	BACKGROUND-COLOR: yellow;
	TEXT-DECORATION: underline;
}

ADDRESS {
	FONT-FAMILY: verdana, arial, helvetica, sans-serif;
	TEXT-ALIGN: right;
	FONT-SIZE: x-small;
	COLOR: #222222;
}
